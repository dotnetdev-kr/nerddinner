@if(Request.Browser.IsMobileDevice && Request.HttpMethod == "GET"){
<div class="view-switcher ui-bar-a">
    @if (MobileViewHelper.GetOverriddenBrowser(ViewContext.HttpContext).IsMobileDevice)
    {
        <text>Mobile View | </text>@Html.ActionLink("Desktop View", "SwitchView", "ViewSwitcher", new { Area = "", mobile = false, returnUrl = Request.Url.PathAndQuery }, new { rel = "external" })
    }
    else{
        @Html.ActionLink("Mobile View", "SwitchView", "ViewSwitcher", new { Area = "", mobile = true, returnUrl = Request.Url.PathAndQuery }, new { rel = "external" })
        <text> | Desktop View</text>
    }
</div>
}